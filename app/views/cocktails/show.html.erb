<div class="container" >
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">
<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> -  <%= dose.ingredient.name %> <%= link_to "delete", cocktail_dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" }, :class => "btn btn-danger" %></p>
<% end %>

<%= link_to 'New dose', new_cocktail_dose_path(@cocktail) %> |
<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<%= link_to 'Back', cocktails_path %>





