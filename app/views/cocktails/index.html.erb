<h1 class='banner'><p class="text-center">Hello</p></h1>
<div class="container" >

  <% @cocktails.each do |cocktail| %>
  <div class="col-sm-4">
    <div class="card">
      <img class="card-img-top" src="https://d32miag6ta013h.cloudfront.net/master_cocktails/1215/fr-ca/small/525x525_cherry-noir-roman-cherry-martini.jpg" alt="Card image cap" style="width: 100%; height: 100%">
      <div class="card-body">
        <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail), :class => "btn btn-danger" %></h5>
      </div>
    </div>
  </div>
<% end %>

</div>

