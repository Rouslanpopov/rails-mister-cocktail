<div class="container">
<h1>Dose#new</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient, collection: Ingredient.all %>
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Cancel', cocktails_path, class: 'btn btn-warning' %>
      <% end %>
    </div>
  </div>
</div>




